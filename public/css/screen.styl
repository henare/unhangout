#chat {
	overflow-y: auto;
	overflow-x: visible;
	height: 90%;
    min-height: 90%;
    display: block;

	#chat-input-region {
		background-color: #f5f5f5; 

		input {
			position: absolute;
			bottom: 0px;
			left: 2.5%;
			right: 2.5%;
			height: 30px;
			width: 95%;
			height: 25px;
		}
	}

	#chat-container {
		position: absolute;
		top: 0px;
		bottom: 0px;
		left: 0px;
		right: 0px;
		overflow-y: auto;

		#chat-list-container {
			height: auto;
			width: auto;

			margin: 0px 0px 10px 0px;

			.chat-message {
        		
        		word-wrap: break-word;

				&.past {
					opacity: 0.3;
				}

				padding-left: 120px;

				&.system {
					text-align: center;
					font-style: italic;

					padding-left: 0px;
					padding-bottom: 10px;
					padding-top: 10px;

					margin-left: 20px;
					margin-right: 20px;
					margin-bottom: 20px;

					border-bottom: 1px solid #aaa;
					.from {
						display: none;
					}
				}

				span.from {
					margin-left: -120px;
					float: left;
					display: block;
					font-weight: bold;

					width: 115px;
					text-align: right;

					&.admin {
						color: orange;
					}
				}
			}
		}
	}
}

